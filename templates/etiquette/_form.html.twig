{{ form_start(form) }}

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        {{ form_row(form.editeur) }}
        {{ form_row(form.nomProduit) }}
        <label for="{{ form.temperature.vars.id }}">Température :</label>
        {{ form_widget(form.temperature, {'attr': {'onchange': 'afficherValeur("' ~ form.temperature.vars.id ~ '")', 'min': '-30', 'max': '10', 'step': '0.5'}}) }}
        <div class="mb-3">
            <span id="{{ form.temperature.vars.id }}_resultat"></span>
        </div>
        {{ form_row(form.jourUtilise) }}
        {{ form_row(form.dlc) }}
        {{ form_row(form.documents) }}
    </div>
</div>

<div class="row mt-5">
    <div class="col-3"></div>
    <div class="col-6">
        <div class="d-flex flex-row justify-content-center justify-content-md-center justify-content-sm-center flex-sm-wrap">
            <div>
                <a class="text-decoration-none text-light" href="{{ path('app_etiquette_index') }}"><button type="button" class="btn btn-primary me-2 mb-sm-2">Relevé des étiquettes</button></a>
            </div>
            <div>
                <a class="text-decoration-none text-light" href="{{ path('main_home') }}"><button type="button" class="btn btn-primary me-2">Annuler</button></a>
                <button class="btn bg-primary text-light" name="btnsave" value="save" type="submit">Enregistrer</button>
            </div>
        </div>
    </div>
    <div class="col-3"></div>
</div>

{{ form_end(form) }}
