{% extends 'base.html.twig' %}

{% block title %}Tâches réalisées | {{ parent() }}{% endblock %}

{% block body %}
    <h2>Relevé du plan de nettoyage</h2>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Utilisateur</th>
            <th>Moment</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for tache_realise in tache_realises %}
            <tr>
                <td>{{ tache_realise.editeur }}</td>
                <td>{{ tache_realise.moment ? tache_realise.moment|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_tache_show', {'id': tache_realise.id}) }}">show</a>
                    <a href="{{ path('app_tache_edit', {'id': tache_realise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune saisie !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tache_new') }}">Enregistrer une nouvelle tâche</a>
{% endblock %}
